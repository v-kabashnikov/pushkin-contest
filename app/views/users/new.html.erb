<div class="panel panel-default" style="width: 30%; margin: 50px auto">
  <div class="panel-body">

    <h2>Registration</h2>

    <%= simple_form_for(@user, url: users_path) do |f| %>

        <%= render partial: 'errors' %>

        <div class="form-inputs">
          <%= f.input :username, :required => true, :autofocus => true %>
          <%= f.input :name, :required => true %>
          <%= f.input :surname, :required => true %>
          <%= f.input :skype, :required => true %>
          <%= f.input :github, :required => true %>
          <%= f.input :phone, :required => true %>
          <%= f.input :vk, :required => true %>
          <%= f.input :url, :required => true %>
        </div>


        <div class="form-actions">
          <%= f.button :submit, 'Sign up', class: 'btn btn-primary btn-lg'%>
        </div>
        <hr>
        <p><%= link_to('Terms of registration', documentation_index_path) %></p>

    <% end %>

  </div>
</div>

<script>
  $(function(){
      $(".button").click(function(){
          $('#errors').hide();
      })
  })
</script>
